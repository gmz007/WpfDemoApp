<UserControl x:Class="DemoApp.UserControls.SettingsTreeViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoApp.UserControls"
             mc:Ignorable="d">

    <DockPanel Height="32">
        <TextBlock
            FontSize="16"
            Margin="0,0,0,-2"
            VerticalAlignment="Center"
            FontFamily="{StaticResource SymbolThemeFontFamily}" 
            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SettingsTreeViewItem}}, Path=IconCode}" />
        <TextBlock
            Margin="12,0,0,0"
            FontSize="16"
            VerticalAlignment="Center"
            Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:SettingsTreeViewItem}}, Path=Text}" />
    </DockPanel>
</UserControl>
