<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:DemoApp.ViewModels"
        xmlns:helper="clr-namespace:DemoApp.Helpers"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="Demo App"
        Height="675" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="8,8,8,8"
            Orientation="Horizontal"
            FlowDirection="RightToLeft" Grid.ColumnSpan="2">

            <ComboBox
                MinWidth="200"
                FlowDirection="LeftToRight"
                ItemsSource="{Binding LanguageCollection}"
                SelectedItem="{Binding SelectedLanguage}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                                Orientation="Horizontal">
                            <Image
                                Width="24"
                                Height="24"
                                Margin="0,0,8,0"
                                Source="{Binding IconUri}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                LineHeight="20"
                                Text="{Binding FullName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <Button
            Grid.Row="1"
            Padding="16,6"
            FontSize="16"
            FontWeight="SemiBold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="ButtonBase_OnClick"
            Content="{helper:Localization Greetings}"/>
    </Grid>
</Window>
